{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",

    "module": "Node16",
    "moduleResolution": "Node16",

    "strict": true,
    "jsx": "preserve",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"]
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "web"]
}
